<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/avatarUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="userName"/>

    <TextView
        android:id="@+id/avatarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Name"/>

    <Spinner
        android:id="@+id/eyes_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Select the eyes"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/nose_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Select the nose"/>

    <Spinner
        android:id="@+id/mouth_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Select the mouth"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>